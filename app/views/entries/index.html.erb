<% content_for :title do %>
    Foodlog  <%= DateTime.now.to_s(:nice_date) %>
    <% end %>


    <div class="columns mt-6 is-centered "> 
    <% @entries.each do |entry| %>
      <div class="column is-one-quarter">
         <div class= "card">
          <heaeder class= "card-header">
       <p class="card-header-title"> <%= entry.meal_type %> </p>  
      </heaeder>
      <div class="card-header">
        <div class="content">

       <p><span class="has-text-weight-bold"><%= entry.calories %></span> calories</p>

        <p><span class="has-text-weight-bold"><%= entry.proteins %></span> grams of protein</p>
       <p><span class="has-text-weight-bold"> <%= entry.carbohydrates %></span> grams of carbohydrates</p>
       <p><span class="has-text-weight-bold"> <%= entry.fats %></span> grams of fats</p>
       <p class="italic">logged <%= time_ago_in_words(entry.created_at) %> ago </p>
       </div>
     </div>

<div class="card-footer">

        <%= link_to 'Show', entry, class: " has-text-weight-bold card-footer-item" %>

        <%= link_to 'Edit', edit_entry_path(entry), class: " card-footer-item" %>

        <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: " has-text-weight-bold card-footer-item" %>
      </div>
    </div>
  </div>
      
    <% end %>